{{! Footer }}
<div class="animated-line animated-line--min"></div>
<footer class="custom-footer">
  <div class="container">
    <div class="custom-footer__top">
      <div class="custom-footer__logo">
        <a href="https://dataspace.copernicus.eu" class="custom-header__logo">
          <img src="{{settings.logo}}" alt="{{help_center.name}}">
        </a>
      </div>
      <div class="row">
        <div class="col col--md-up-2" data-plugin-spoiler>
          <div class="custom-footer__heading is-hidden--md-up js-spoiler-toggle">Explore data</div>
          <a href="https://dataspace.copernicus.eu/explore-data" class="custom-footer__heading is-hidden--sm-down">Explore
            data</a>
          <ul class="custom-footer__menu js-spoiler">
            <li><a href="https://dataspace.copernicus.eu/browser/" target="_blank">Copernicus browser</a></li>
            <li><a href="https://dataspace.copernicus.eu/explore-data/data-collections">Data collections</a></li>
          </ul>
        </div>
        <div class="col col--md-up-2" data-plugin-spoiler>
          <div class="custom-footer__heading is-hidden--md-up js-spoiler-toggle">Analyse</div>
          <a href="https://dataspace.copernicus.eu/analyse" class="custom-footer__heading is-hidden--sm-down">Analyse</a>
          <ul class="custom-footer__menu js-spoiler">
            <li><a href="https://dataspace.copernicus.eu/analyse/data-workspace">Data workspace</a></li>
            <li><a href="https://dataspace.copernicus.eu/analyse/jupyter-notebooks">Jupyter Hub</a></li>
            <li><a href="https://dataspace.copernicus.eu/analyse/open-eo-editor">openEO web editor</a></li>
            <li><a href="https://dataspace.copernicus.eu/analyse/apis">API</a></li>
            <li><a href="https://dataspace.copernicus.eu/analyse/traceability">Traceability</a></li>
          </ul>
        </div>
        <div class="col col--md-up-2" data-plugin-spoiler>
          <a href="https://dataspace.copernicus.eu/ecosystem" class="custom-footer__heading">Ecosystem</a>
        </div>
        <div class="col col--md-up-2" data-plugin-spoiler>
          <div class="custom-footer__heading js-spoiler-toggle">More</div>
          <ul class="custom-footer__menu js-spoiler">
            {{#unless signed_in}}
              <li>{{#link "sign_in"}}Login{{/link}}</li>
            {{/unless}}
            <li><a href="https://dataspace.copernicus.eu/news">News</a></li>
            <li><a href="https://dataspace.copernicus.eu/events">Events</a></li>
            <li><a href="https://dataspace.copernicus.eu/about">About</a></li>
          </ul>
        </div>
        <div class="col col--md-up-4">
          <div class="custom-footer__soc">
            {{#if settings.footer_youtube_enable}}
              <a id="footer-youtube" class="btn btn--circle btn--secondary" href="{{settings.footer_youtube_url}}" target="_blank">
                <i class="fab fa-youtube"></i>
              </a>
            {{/if}}
            {{#if settings.footer_twitter_enable}}
              <a id="footer-twitter" class="btn btn--circle btn--secondary" href="{{settings.footer_twitter_url}}" target="_blank">
                <i class="fab fa-twitter"></i>
              </a>
            {{/if}}
            {{#if settings.footer_linkedin_enable}}
              <a id="footer-linkedin" class="btn btn--circle btn--secondary" href="{{settings.footer_linkedin_url}}" target="_blank">
                <i class="fab fa-linkedin-in"></i>
              </a>
            {{/if}}
            {{#if settings.footer_facebook_enable}}
              <a id="footer-facebook" class="btn btn--circle btn--secondary" href="{{settings.footer_facebook_url}}" target="_blank">
                <i class="fab fa-facebook-f"></i>
              </a>
            {{/if}}
            {{#if settings.footer_instagram_enable}}
              <a id="footer-instagram" class="btn btn--circle btn--secondary" href="{{settings.footer_instagram_url}}" target="_blank">
                <i class="fab fa-instagram"></i>
              </a>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
    <div class="custom-footer__bottom">
      <a href="https://dataspace.copernicus.eu/terms-and-conditions">Terms and conditions</a>
      <a href="https://dataspace.copernicus.eu/privacy-policy">Privacy policy</a>
    </div>
  </div>
</footer>

</div>

<script>
  $(window).trigger('page:loaded');

  var observer = new MutationObserver(function(mutationsList, observer) {
    mutationsList.forEach(function(mutation) {
      if (mutation.type === 'childList') {
        if (window.HelpCenter) {
          try {
            window.theme.settings = Object.assign({}, HelpCenter.internal.theming_settings);
          }
          catch (error) {
            window.theme.settings = {
              isError: true
            };
          }
          observer.disconnect();
        }
      }
    });
  });

  observer.observe(document.body, {
    attributes: false,
    childList: true,
    subtree: false
  });
</script>

{{#if settings.inject_footer}}
  <script>
    document.write(({{json_stringify settings.inject_footer}}).replace(/(&lt;)/g, '<').replace(/(&gt;)/g, '>'));
  </script>
{{/if}}
