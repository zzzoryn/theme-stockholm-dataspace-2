{{! Category blocks }}
{{#if settings.category_blocks_enable}}
  {{#if categories}}
    <section id="category-blocks" class="section category-blocks category-blocks--type-{{settings.category_blocks_type}}">
      <div class="container">
        <div class="row">
          {{#each categories}}
            <div class="col--md-up-6 category-blocks__item">
              <a href="{{url}}" class="category-blocks__link">
                <span class="h3 category-blocks__title">{{name}}</span>
                <span class="category-blocks__description">{{description}}</span>
              </a>
            </div>
          {{/each}}
        </div>
      </div>
    </section>
  {{/if}}
{{/if}}

{{! Knowledge base }}
{{#if settings.knowledge_enable}}
  {{#if categories}}
    <section id="knowledge" class="section section--padding knowledge knowledge--type-{{settings.knowledge_type}}">
      <div class="container" data-plugin-knowledge='{"type": {{settings.knowledge_type}} }'>
        <div class="row">

          {{! Tab links }}
          <nav class="col--md-5 col--lg-up-4 knowledge__nav js-tabs-links">
            {{#each categories}}
              <a href="#knowledge-{{id}}" class="knowledge__nav-link" tabindex="0">
                <h3 class="categories__title">
                  <span>{{name}}</span>
                  <i class="fas fa-chevron-right is-hidden--rtl"></i>
                  <i class="fas fa-chevron-left is-hidden--ltr"></i>
                </h3>
                {{#if description}}
                  <p class="categories__description is-hidden--sm-down js-spoiler">
                    <span>{{description}}</span>
                  </p>
                {{/if}}
              </a>
            {{/each}}
          </nav>

          {{! Categories }}
          <div class="col--md-7 col--lg-up-8 categories-col">
            <div class="categories js-tabs-containers">
              {{#each categories}}
                <div id="knowledge-{{id}}" class="categories__category js-knowledge-category">
                  <div class="row">

                    {{! Category title }}
                    <div class="col--md-5 col--lg-up-4 knowledge__secondary-nav">
                      <a href="{{url}}"><h3 class="categories__title">{{name}}</h3></a>
                      {{#if description}}
                        <p class="categories__description">
                          {{description}}
                        </p>
                      {{/if}}
                    </div>

                    {{! Sections }}
                    <div class="col--md-7 col--lg-up-8 sections">

                      <div class="sections__container js-spoiler">
                        {{#each sections}}
                          <div class="sections__item">
                            <a href="{{url}}"><h3 class="categories__title">{{name}}</h3>
                            </a>
                            <p class="categories__description">{{description}}</p>

                            {{! Article list }}
                            <div class="row articles articles--simple">
                              {{#each articles}}
                                <div class="col--lg-up-6">
                                  <a href="{{url}}" class="articles__link {{#if promoted}}articles__link--promoted{{/if}} {{#if internal}}articles__link--internal{{/if}}">
                                    {{title}}
                                  </a>
                                </div>
                              {{/each}}

                              {{#if more_articles}}
                                <div class="col articles__more">
                                  <a href="{{url}}" class="btn btn--sm btn--secondary">
                                    <span>{{t 'show_all_articles' count=article_count}}</span>
                                    <i class="fas fa-chevron-right is-hidden--rtl"></i>
                                    <i class="fas fa-chevron-left is-hidden--ltr"></i>
                                  </a>
                                </div>
                              {{/if}}
                            </div>

                          </div>
                        {{/each}}
                      </div>

                      <div class="knowledge__collapse-btn">
                        <a class="btn btn--sm btn--color-secondary js-spoiler-toggle" role="button" tabindex="0">
                          <span>{{t 'browse'}}</span>
                          <i class="fas fa-chevron-down"></i>
                        </a>
                      </div>

                    </div>

                  </div>
                </div>
              {{/each}}
            </div>
          </div>

        </div>
      </div>
    </section>
  {{/if}}
{{/if}}

{{! Promoted articles }}
{{#if settings.promoted_enable}}
  <section id="promoted" class="section section--padding promoted promoted--type-{{settings.promoted_type}}">
    <div class="container" data-plugin-tabs>
      <div class="row">

        <div class="col--md-5 col--lg-up-4 promoted__left-col">
          <h3 class="h2 promoted__heading">{{t 'promoted_articles'}}</h3>
          <nav class="promoted__nav js-tabs-links">
            {{#each promoted_articles}}
              <a href="#promoted-{{id}}" class="promoted__nav-link" tabindex="0">
                <span>{{title}}</span>
                <i class="fas fa-chevron-right is-hidden--rtl"></i>
                <i class="fas fa-chevron-left is-hidden--ltr"></i>
              </a>
            {{/each}}
          </nav>
        </div>

        <div class="col--md-7 col--lg-up-8 promoted__right-col">

          <div class="row articles">
            {{#each promoted_articles}}
              <div class="col">
                <div class="articles__item">
                  <span>{{date updated_at}}</span>
                  <a href="{{url}}" class="articles__link articles__link--promoted {{#if internal}}articles__link--internal{{/if}}">{{title}}</a>
                  <div class="articles__body">{{excerpt body characters=150}}</div>
                </div>
              </div>
            {{/each}}
          </div>

          <div class="promoted__body is-hidden--sm-down tabs__containers js-tabs-containers">
            {{#each promoted_articles}}
              <div id="promoted-{{id}}" class="tabs__container" aria-hidden="true">
                <div class="promoted__body-container">
                  <h2>{{title}}</h2>
                  <div class="markdown" data-article-body data-plugin-formatting>
                    {{body}}
                  </div>
                </div>
                <a href="{{url}}" class="btn btn--primary promoted__body-btn">
                  <span>{{t 'browse'}}</span>
                  <i class="fas fa-chevron-right is-hidden--rtl"></i>
                  <i class="fas fa-chevron-left is-hidden--ltr"></i>
                </a>
              </div>
            {{/each}}
          </div>

        </div>

      </div>
    </div>

  </section>
{{/if}}

{{! Recent activity }}
{{#if settings.activity_enable}}
  <section id="activity" class="section section--padding activity activity--type-{{settings.activity_type}}">
    <div class="container">
