{{! Welcome }}
<section id="welcome" class="section welcome welcome--type-{{settings.welcome_type}} welcome--style-{{settings.welcome_style}} welcome--size-{{settings.welcome_size}}"
         data-welcome-style="{{settings.welcome_style}}"
>
  <div class="welcome__section">
    <div class="container welcome__container">
      <div class="welcome__bg {{#if settings.welcome_mask_enable}}welcome__bg--with-mask{{/if}}">
        <img class="welcome__bg-image is-hidden--ui-dark" src="{{settings.welcome_bg}}" alt="{{settings.welcome_title}}" data-plugin-load-image>
        <img class="welcome__bg-image is-hidden--ui-light" src="{{settings.welcome_bg_dark}}" alt="{{settings.welcome_title}}" data-plugin-load-image>
      </div>

      <div class="welcome__content">

        <div class="welcome__text">
          <h1 class="h1 welcome__title">
            {{#if settings.translations_enable}}
              {{dc settings.welcome_title}}
            {{else}}
              {{settings.welcome_title}}
            {{/if}}
          </h1>
          <p class="welcome__description">
            {{#if settings.translations_enable}}
              {{dc settings.welcome_description}}
            {{else}}
              {{settings.welcome_description}}
            {{/if}}
          </p>
        </div>


        {{#if settings.translations_enable}}
          {{search instant=true placeholder=(dc settings.search_placeholder)}}
        {{else}}
          {{search instant=true placeholder=settings.search_placeholder}}
        {{/if}}
      </div>

      <div class="welcome__image">
        <img class="welcome__image-light" src="{{settings.welcome_image}}" alt="{{settings.welcome_title}}" data-plugin-load-image>
        <img class="welcome__image-dark" src="{{settings.welcome_image_dark}}" alt="{{settings.welcome_title}}" data-plugin-load-image>
      </div>
    </div>
  </div>

</section>

